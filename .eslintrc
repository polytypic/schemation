{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "no-console": 0,
    "no-const-assign": 2,
    "no-unneeded-ternary": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "semi": [2, "never"]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  }
}
